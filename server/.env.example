# Backend configuration
# Copy this file to .env and adjust if needed

# Server host/port
HOST=0.0.0.0
PORT=3001

# JWT Secret - OBRIGATÓRIO! Use uma chave forte em produção
JWT_SECRET=sua_chave_secreta_super_forte_aqui_mude_em_producao

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5176,http://localhost:5174,http://localhost:5173,http://localhost:5175

# SQLite database file (absolute or relative)
# If not set, defaults to server/db.sqlite (resolved relative to build)
DB_FILE=./server/db.sqlite

# Environment (development, production)
NODE_ENV=development